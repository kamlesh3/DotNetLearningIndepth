
@model HomeEditsViewModel
@*@inject IStudent _IStudentObject*@
@{
    ViewBag.Title = "Edit Student";
    var photo = "~/images/" + (Model.existingphoto ?? "user.jpg");
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="id" />
    <input hidden asp-for="existingphoto" />
    <div class="form-group row m-3">
        <label asp-for="name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="name" class="form-control" placeholder="Name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-3">
        <label asp-for="email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="email" class="form-control" placeholder="Email">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-3">
        <label asp-for="department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="department" class="form-control mr-sm-2" asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select><br>
            <span asp-validation-for="department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-3 mt-0">
        <label asp-for="photopath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="photopath" class="form-control Custom-file-input">
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photo" asp-append-version="true" />
    </div>
    <div class="form-group row m-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    @*<div>Total Student Count=@_IStudentObject.GetAllStudent().Count()</div>*@
</form>
